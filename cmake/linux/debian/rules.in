#!/usr/bin/make -f

DH_CMAKE_BUILD_DIR=obj	-${DEB_BUILD_GNU_TYPE}
DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

ifeq ($(shell dpkg-architecture -qDEB_HOST_ARCH_CPU),i386)
WANT_VST_NOWINE = OFF
else
WANT_VST_NOWINE = ON
endif


%:
	dh $@ -Scmake -Bdebian/cmake --parallel

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_INSTALL_LIBDIR=lib -DWANT_VST_NOWINE:BOOL=$(WANT_VST_NOWINE) $(CMAKE_OPTS)

override_dh_install:
	dh_install
	rm -f debian/lmms/usr/lib/lmms/RemoteVstPlugin*
